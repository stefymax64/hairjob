<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Découvrez les offres d'emploi de la coiffure">
    <meta name="title" content="Hair'Job">

    <!-- FAVICON -->
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
    <link rel="manifest" href="{{ asset('site.webmanifest') }}">

    <title>{% block title %}Bienvenue sur Hair'Job !{% endblock %}</title>

    {% block stylesheets %}
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

        <!-- Fonts -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"
              integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous"/>
        <link href="https://fonts.googleapis.com/css?family=Bebas+Neue&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Lobster+Two&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Eagle+Lake&display=swap" rel="stylesheet">

        <!--Styles CSS-->
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/burger.css') }}">
    {% endblock %}

    <script src="{{ asset('js/parallax.js') }}"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>

<body>
    {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
    <div class="alert alert-warning" style="margin-bottom: 0;">
        You are currently switched to this user.
        <a href="{{ path('index', {'_switch_user': '_exit'}) }}">Exit Impersonation</a>
    </div>
    {% endif %}
    <header>
        <nav id="header" class="header">
            <!--Title logo website-->
            <div class="logo">
                <a href="{{ path('index') }}">
                    <p class="font_bebas">professional hairdresser</p>
                    <h1 class="font_eagle">Hair'Job</h1>
                    <small class="font_lobster">Since 1975</small>
                </a>
            </div>
            <!--Burger Menu-->
            <input class="menu-btn" type="checkbox" id="menu-btn"/>
            <label class="menu-icon" for="menu-btn"><span class="nav-icon"></span></label>
                <ul class="menu">
                    {% if is_granted('ROLE_RECRUITER') %}
                        <li>
                            <p class="welcome">Bienvenue <strong>{{ app.user.firstName }}</strong> !</p>
                            <img class="nav-profile-img rounded-circle" src="{{ app.user.avatarUrl(100) }}" alt="avatar">
                        </li>
                        <li><a href="{{ path('app_account') }}">Profil</a></li>
                        <li><a href="{{ path('advert_add') }}">Publier une annonce</a></li>
                        <li><a href="{{ path('app_contact') }}">Contact</a></li>
                        <li><a class="btn-log" href="{{ path('app_logout') }}"><i class="fas fa-times"></i> Se déconnecter</a></li>

                    {% elseif is_granted('ROLE_USER') %}
                        <li>
                            <p class="welcome">Bienvenue <strong>{{ app.user.firstName }}</strong> !</p>
                            <img class="nav-profile-img rounded-circle" src="{{ app.user.avatarUrl(100) }}" alt="avatar">
                        </li>
                        <li><a href="{{ path('app_account') }}">Profil</a></li>
                        <li><a href="{{ path('app_contact') }}">Contact</a></li>
                        <li><a class="btn-log" href="{{ path('app_logout') }}"><i class="fas fa-times"></i> Se déconnecter</a></li>
                    {% else %}
                        <li><a href="{{ path('app_registrer') }}">Espace Candidat</a></li>
                        <li><a href="{{ path('app_registrer_recruiter') }}">Espace Recruteur</a></li>
                        <li><a href="{{ path('app_contact') }}">Contact</a></li>
                    {% endif %}
                </ul>
        </nav>
    </header>
