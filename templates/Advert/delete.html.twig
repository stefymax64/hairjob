{% extends "layout.html.twig" %}

{% block title %}
    Supprimer une annonce - {{ parent() }}
{% endblock %}

{% block layout_body %}
    <h2>Supprimer une annonce</h2>
    <p>Êtes-vous certain de vouloir supprimer l'annonce "{{ advert.title }}" ?</p>

    <form action="{{ path('advert_delete', {'id': advert.id}) }}" method="post">
        <a href="{{ path('advert_view', {'id': advert.id}) }}" class="btn btn-default">
            <i class="">Retour à l'annonce</i>
        </a>
        <input type="submit" value="Supprimer" class="btn btn-danger">

        {{ form_rest(form) }}
    </form>

{% endblock %}