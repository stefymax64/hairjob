{% extends "layout.html.twig" %}

{% block title %}
    Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block layout_body %}

    <div>
        {% if advert.image is not null %}
            <img class="imgadvert" src="{{ asset(advert.image.webPath) }}" alt="{{ advert.image.alt }}"/>
        {% endif %}
    </div>

    <h2>{{ advert.title }}</h2>
    <i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>

    <div>
        {{ advert.content|raw }}
    </div>
    <br>
    {% if not advert.categories.empty %}
        <div>
            Cette annonce est parue dans les catégories suivantes :
            {% for category in advert.categories %}
                {{ category.name }}{% if not loop.last %}, {% endif %}
            {% endfor %}
        </div>
    {% endif %}

    {% if not advert.skills.empty %}
        <div>
            Cette annonce est parue dans les compétences suivantes :
            {% for skill in advert.skills %}
                {{ skill.name }}{% if not loop.last %}, {% endif %}
            {% endfor %}
        </div>
    {% endif %}

    {% if not advert.advertSkills.empty %}
        <div>
            Cette annonce est parue dans les niveaux suivantes :
            {% for advert_skill in advert.advertskills %}
                {{ advert_skill.level }}{% if not loop.last %}, {% endif %}
            {% endfor %}
        </div>
    {% endif %}

    {% if listAdvertSkills|length > 0 %}
        <div>
            Cette annonce requiert les compétences suivantes :
            <ul>
                {% for advertSkill in listAdvertSkills %}
                    <li>{{ advertSkill.skill.name }} : niveau {{ advertSkill.level }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
<br>
    <section class="info">
        <article>
            <i class=""></i>
            <a href="{{ path('advert_index') }}">Retour à la liste</a>
        </article>
            <i class=""></i>
            <a href="{{ path('advert_edit', {'id': advert.id}) }}">Modifier l'annonce</a>
        <article>
            <i class=""></i>
            <a href="{{ path('advert_delete', {'id': advert.id}) }}">Supprimer l'annonce</a>
        </article>
    </section>

{% endblock %}