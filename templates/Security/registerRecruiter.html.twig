{% extends "base.html.twig" %}

{% block title %}Créer votre compte Recruteur!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{% block base_body %}
    <h2 class="connect">Connectez-vous ou créer votre compte recruteur </h2>
    <p>Si vous souhaitez publier une annonce d'offre d'emploi dans votre région, créer votre espace recruteur ou connectez-vous :</p>
    <div class="connect">
        <a class="connect" href="{{ path('app_login') }}">Connexion</a>
    </div>
<form class="form-signin" method="post">

    <h1 class="h3 mb-3 font-weight-normal">Créer votre compte Recruteur</h1>
    <label for="inputEmail">Email</label>
    <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>

    <label for="inputFirstname">Nom du contact</label>
    <input type="text" name="firstName" id="inputFirstname" class="form-control" placeholder="Nom de contact" required>

    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>

    <label for="inputSiret">N° Siret</label>
    <input type="number" name="siret" id="inputSiret" class="form-control" min="14" placeholder="N° Siret" required>

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" id="remember_me" name="_remember_me" required> J'accepte que mon N° Siret soit vérifié afin de valider mon compte "Recruteur"
        </label>
    </div>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" id="remember_me" name="_remember_me" required> J'ai lu et j'accepte <a href="{{ path('legal_notice') }}">les mentions légales</a>, <a href="{{ path('legal_rgpd') }}">la charte de protection des données personnelles</a> et <a href="{{ path('legal_cookies') }}">la politique relative aux cookies</a> de Hair'Job.
            </label>
        </div>

    {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

    <button class="btn btn-lg btn-primary" type="submit">
        Enregistrer
    </button>
</form>

{% endblock %}
